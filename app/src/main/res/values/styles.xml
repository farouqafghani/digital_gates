<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin50</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/margin6</item>
        <item name="android:layout_marginStart">@dimen/margin4</item>
        <item name="android:layout_marginEnd">@dimen/margin4</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">
            @animator/button_state_list_anim
        </item>
    </style>

    <!-- Other -->
    <style name="BlueButtonTheme" parent="BaseButton">
        <item name="android:background">@drawable/btn_gradient_blue</item>
    </style>

</resources>
